<%= form_for @activity, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :event, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :event, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :likes, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :likes, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :comments, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :comments, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                activities_path, :class => 'btn' %>
  </div>
<% end %>
